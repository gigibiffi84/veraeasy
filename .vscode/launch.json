{
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/Src/Veraeasy/bin/Debug/net8.0/Veraeasy.dll>",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "C#: Veraeasy Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/Src/Veraeasy/Veraeasy.csproj"
        }
    ]
}